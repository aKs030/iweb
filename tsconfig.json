{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "/content/*": ["content/*"],
      "/pages/*": ["pages/*"]
    }
  },
  "include": [
    "content/**/*.js",
    "pages/**/*.js",
    "sw.js",
    "server.js",
    "functions/**/*.js",
    "scripts/**/*.mjs"
  ],
  "exclude": ["node_modules", "build", "dist", "reports"]
}
