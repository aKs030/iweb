{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "baseUrl": ".",
    "paths": {
      "/content/*": ["content/*"],
      "/pages/*": ["pages/*"],
      "/workers/*": ["workers/*"]
    }
  },
  "include": [
    "content/**/*.js",
    "content/**/*.jsx",
    "pages/**/*.js",
    "workers/**/*.js",
    "sw.js",
    "server.js",
    "functions/**/*.js"
  ],
  "exclude": ["node_modules", "build", "complexity-report", "reports"]
}
