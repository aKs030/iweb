{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-unused-vars": ["warn", { "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }],
    "semi": ["warn", "always"]
  },
  "overrides": [
    {
      "files": ["playwright.config.js", "tests/**/*.js"],
      "env": { "node": true },
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
