{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.html",
      "options": { "printWidth": 120 }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": { "singleQuote": false }
    },
    {
      "files": "*.json",
      "options": { "tabWidth": 2 }
    }
  ]
}