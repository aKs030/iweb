{
  "geminicodeassist.project": "celestial-century-8vm9l",
  "python.testing.unittestArgs": ["-v", "-s", "./test-results", "-p", "*test.py"],
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true,

  // Editor formatting + behavior
  "editor.formatOnSave": true,
  "editor.formatOnSaveTimeout": 5000,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // Auto fix on save: prefer explicit per-tool rules
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },

  // Linting integrations
  "eslint.validate": ["javascript", "javascriptreact", "html"],
  "eslint.alwaysShowStatus": true,
  // Default formatters per language (workspace defaults)
  "[json]": {"editor.defaultFormatter": "esbenp.prettier-vscode"},
  "[javascript]": {"editor.defaultFormatter": "esbenp.prettier-vscode"},
  "[css]": {"editor.defaultFormatter": "esbenp.prettier-vscode"},
  "[html]": {"editor.defaultFormatter": "esbenp.prettier-vscode"},
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "liveServer.settings.multiRootWorkspaceName": "iweb"
}
