root = true

[*.{js,jsx,ts,tsx,css,scss,html,json,md}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{png,jpg,jpeg,gif,svg,ico}]
trim_trailing_whitespace = false
