{
  "name": "iweb",
  "version": "0.2.2",
  "private": true,
  "description": "Static site for Abdulkerim with test tooling",
  "license": "MIT",
  "scripts": {
    "serve": "http-server ./ -p 8081",
    "dev": "npm run serve",
    "build:css": "npx tailwindcss -i src/styles/tailwind.css -o content/styles/tailwind.css --minify",
    "watch:css": "npx tailwindcss -i src/styles/tailwind.css -o content/styles/tailwind.css --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "lint:js": "eslint . --ext .js,.ts",
    "lint": "npm run lint:js"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.1.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^13.0.0",
    "globals": "^16.5.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "postcss": "^8.4.24",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "node-fetch": "^3.3.2",
    "playwright": "^1.57.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{css,html,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
