{
  "name": "iweb",
  "version": "0.2.1",
  "private": true,
  "description": "Static site for Abdulkerim with test tooling",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .js --fix",
    "lint:css": "stylelint \"**/*.css\" --fix",
    "format": "prettier --write .",
    "serve": "http-server ./ -p 8081",
    "ws-server": "node scripts/ws-test-server.js",
    "dev": "concurrently \"npm run serve\" \"npm run ws-server\""
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "http-server": "^14.1.1",
    "lint-staged": "^13.3.0",
    "prettier": "^3.2.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "ws": "^8.18.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,scss,html,json,md}": [
      "prettier --write"
    ]
  }
}
