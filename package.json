{
  "name": "aks-website",
  "version": "1.0.0",
  "description": "Portfolio Website mit Cloudflare AI Search (Vanilla JS)",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "node scripts/dev-workflow.mjs",
    "qa": "run-s build:types:core qa:lint qa:scripts",
    "qa:lint": "run-p lint:*",
    "qa:scripts": "run-s check:*",
    "qa:fix": "run-p fix:*",
    "qa:all": "npm run qa:fix && npm run qa",
    "lint:es": "eslint . --cache",
    "lint:css": "stylelint \"content/**/*.css\" \"pages/**/*.css\" --cache",
    "lint:format": "prettier --check . --cache",
    "lint:types": "tsc -p tsconfig.typecheck.json --noEmit",
    "build:types:core": "tsc -p tsconfig.build-core.json && prettier --write content/core/logger.js content/core/ui-store.js",
    "fix:es": "eslint . --fix --cache",
    "fix:css": "stylelint \"content/**/*.css\" \"pages/**/*.css\" --fix --cache",
    "fix:format": "prettier --write . --cache",
    "check:css-tokens": "node scripts/css-token-structure-check.mjs",
    "check:css-audit": "node scripts/css-audit.mjs",
    "check:ai": "node scripts/sync-ai-index-apps.mjs --check",
    "check:structure": "node scripts/structure-check.mjs",
    "clean": "rm -rf .wrangler node_modules/.cache",
    "prepare": "husky",
    "styles:generate": "node scripts/generate-tokens-css.mjs && node scripts/generate-utilities.mjs",
    "docs:check": "node scripts/docs-check.mjs",
    "ai-index:sync": "node scripts/sync-ai-index-apps.mjs",
    "cf:redirect:audit": "node scripts/cloudflare-redirect-audit.mjs --days 8 --limit 500",
    "cf:redirect:prune": "node scripts/cloudflare-redirect-audit.mjs --days 8 --limit 500 --apply-prune"
  },
  "dependencies": {
    "htm": "^3.1.1",
    "lucide-react": "^0.575.0",
    "react-dom": "^19.2.4",
    "three": "^0.183.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260228.1",
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.3",
    "dompurify": "^3.3.1",
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.1",
    "purgecss": "^7.0.2",
    "react": "^19.2.4",
    "stylelint": "^16.25.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.67.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{md,html,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
