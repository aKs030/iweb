{
  "name": "iweb",
  "version": "1.0.0",
  "description": "Portfolio website of Abdulkerim Sesli - Web Developer & Photographer in Berlin",
  "type": "module",
  "scripts": {
    "dev": "python3 -m http.server 8080",
    "dev:worker": "cd workers/youtube-api-proxy && wrangler dev --env youtube --port 8788",
    "dev:search-worker": "cd workers/ai-search-proxy && wrangler dev --port 8787",
    "format": "prettier --write \"**/*.{js,css,json,md,html}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,css,json,md,html}\" --ignore-path .prettierignore",
    "lint": "eslint \"**/*.js\" --fix",
    "lint:check": "eslint \"**/*.js\"",
    "check": "npm run lint:check && npm run format:check",
    "fix": "npm run lint && npm run format",
    "prepare": "husky",
    "deploy:workers": "./workers/deploy.sh",
    "css:check": "echo 'CSS Stats:' && wc -l content/styles/*.css content/styles/components/*.css 2>/dev/null || wc -l content/styles/*.css",
    "knip": "knip",
    "knip:production": "knip --production",
    "quality": "npm run knip && npm run check:duplicates && npm run check:circular",
    "quality:full": "npm run quality && npm run check:jshint && npm run check:typescript && npm run check:html",
    "check:duplicates": "jscpd content/ pages/ workers/ --min-lines 10 --min-tokens 50 --format javascript",
    "check:circular": "madge --circular --extensions js content/ pages/ workers/",
    "check:console": "! grep -r 'console\\.log' content/ pages/ --include='*.js' --exclude-dir=node_modules",
    "check:jshint": "jshint content/**/*.js pages/**/*.js sw.js",
    "check:typescript": "tsc --noEmit",
    "check:html": "html-validate \"index.html\" \"pages/**/*.html\" \"content/**/*.html\"",
    "deps:graph": "madge --extensions js --image dependency-graph.svg content/main.js",
    "deps:check": "npm outdated",
    "audit:full": "npm run quality:full && npm run check:console"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.1.0",
    "@types/three": "^0.182.0",
    "eslint": "^9.39.2",
    "html-validate": "^10.7.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.8",
    "jshint": "^2.13.6",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "madge": "^8.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aKs030/iweb.git"
  },
  "keywords": [
    "portfolio",
    "webdev",
    "photography",
    "berlin"
  ],
  "author": "Abdulkerim Sesli",
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "bugs": {
    "url": "https://github.com/aKs030/iweb/issues"
  },
  "homepage": "https://github.com/aKs030/iweb#readme",
  "dependencies": {
    "dompurify": "^3.3.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "three": "^0.182.0"
  }
}
