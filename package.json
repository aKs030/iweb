{
  "name": "iweb",
  "version": "1.0.0",
  "description": "Interaktive pers√∂nliche Homepage mit Feature-Rotation, Spielen und Webentwicklungs-Demos.",
  "main": "index.js",
  "scripts": {
    "lint:js": "eslint content/**/*.js pages/**/*.js --fix",
    "lint:html": "node scripts/validate-html.js",
    "check:css": "node scripts/check-css-consolidation.js",
    "consolidate:css": "node scripts/consolidate-css.js",
    "analyze:bundle": "node scripts/analyze-bundle-size.js",
    "audit:a11y": "node scripts/audit-a11y.js",
    "performance:guide": "node scripts/performance-profiling-guide.js",
    "test:all": "npm run lint:js && npm run lint:html && npm run check:css && npm run audit:a11y"
  },
  "keywords": [
    "portfolio",
    "javascript",
    "animations",
    "es6-modules",
    "web-components"
  ],
  "author": "aKs030",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "eslint": "^9.11.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.0",
    "globals": "^14.0.0",
    "html-validate": "^8.22.0",
    "prettier": "^3.3.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": "warn",
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
