{
  "name": "iweb",
  "version": "1.0.0",
  "description": "Portfolio website of Abdulkerim Sesli - Web Developer & Photographer in Berlin",
  "main": "index.js",
  "scripts": {
    "iweb": "node scripts/dev-server.js",
    "dev": "npm run iweb",
    "start": "npm run iweb",
    "sync:gtm": "node scripts/sync-gtm-with-site-config.js",
    "format": "prettier --write \"**/*.{js,css,json,md,html,htm}\"",
    "lint": "eslint \"**/*.{js,ts}\" --fix",
    "config:validate": "node scripts/config-validate.js",
    "images:build": "node scripts/generate-og-responsive-images.js && node scripts/generate-image-sitemap.js && node scripts/generate-videos-jsonld.js",
    "images:sitemap": "node scripts/generate-image-sitemap.js",
    "videos:schema": "node scripts/generate-videos-jsonld.js",
    "videos:pages": "node scripts/generate-video-pages.js",
    "videos:links": "node scripts/insert-video-links.js",
    "videos:check-urls": "node scripts/check-video-urls.js"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "depcheck": "^1.4.7",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^4.2.5",
    "lint-staged": "^16.2.7",
    "prettier": "^2.8.8",
    "sharp": "^0.34.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aKs030/iweb.git"
  },
  "keywords": [
    "portfolio",
    "webdev",
    "photography",
    "berlin"
  ],
  "author": "Abdulkerim Sesli",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "bugs": {
    "url": "https://github.com/aKs030/iweb/issues"
  },
  "homepage": "https://github.com/aKs030/iweb#readme"
}
