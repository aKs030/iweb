{
  "name": "iweb",
  "version": "0.2.2",
  "private": true,
  "type": "module",
  "description": "Static site for Abdulkerim with test tooling",
  "license": "MIT",
  "scripts": {
    "serve": "http-server ./ -p 8081",
    "serve:dev": "node ./scripts/dev-serve.js",
    "test:canonical": "node ./scripts/test-canonical.mjs",
    "check:canonical-static": "bash ./scripts/check-canonical-static.sh",
    "build:og-images": "node ./scripts/build-og-images.mjs",
    "update:sitemap": "node ./scripts/update-sitemap-lastmod.mjs",
    "test:playwright": "npx playwright test",
    "dev": "npm run serve",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "build": "npm run prepare:build",
    "build:prod": "npm run prepare:build",
    "lint:js": "eslint . --ext .js,.ts",
    "lint": "npm run lint:js",
    "test:head": "node ./tests/computeEffectiveCanonical.test.mjs",
    "test:pwa": "node ./tests/pwa.test.mjs",
    "test:meta": "node ./tests/pageMeta.test.mjs",
    "test:canonical": "node ./tests/canonical.test.mjs",
    "test:apply-canonical": "node ./tests/applyCanonical.test.mjs",
    "test:schedule": "node ./tests/scheduleSchema.test.mjs",
    "test:upsert": "node ./tests/upsert.test.mjs",
    "prepare:build": "npm run build:og-images",
    "fetch-three": "bash ./scripts/fetch_three.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "eslint": "^9.17.0",
    "glob": "^10.3.3",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "image-size": "^1.1.1",
    "lint-staged": "^14.0.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.7.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{css,html,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
