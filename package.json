{
  "name": "iweb",
  "version": "1.0.0",
  "description": "Interaktive pers√∂nliche Homepage mit Feature-Rotation, Spielen und Webentwicklungs-Demos.",
  "type": "module",
  "main": "index.js",
  "author": "aKs030",
  "license": "ISC",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:html",
    "lint:js": "eslint content/**/*.js pages/**/*.js scripts/**/*.js --fix",
    "lint:js:check": "eslint content/**/*.js pages/**/*.js scripts/**/*.js",
    "lint:html": "node scripts/validate-html.js --ci",
    "lint:html:verbose": "node scripts/validate-html.js --verbose",
    "lint:html:all": "node scripts/validate-html.js --verbose --include-reports",
    "format": "prettier --write \"**/*.{js,json,css,html,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,json,css,html,md}\" --ignore-path .gitignore",
    "check:css": "node scripts/check-css-consolidation.js",
    "consolidate:css": "node scripts/consolidate-css.js",
    "analyze:bundle": "node scripts/analyze-bundle-size.js",
    "audit:a11y": "node scripts/audit-a11y.js",
    "lighthouse": "node scripts/lighthouse-audit.js both",
    "lighthouse:desktop": "node scripts/lighthouse-audit.js desktop",
    "lighthouse:mobile": "node scripts/lighthouse-audit.js mobile",
    "test:all": "npm run lint:js:check && npm run lint:html && npm run check:css && npm run audit:a11y",
    "scan:dead": "node scripts/dead-code-scan.js"
  },
  "keywords": [
    "portfolio",
    "javascript",
    "animations",
    "es6-modules",
    "web-components"
  ],
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "chrome-launcher": "^1.2.1",
    "eslint": "^9.11.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.0",
    "globals": "^14.0.0",
    "html-validate": "^8.22.0",
    "lighthouse": "^12.8.2",
    "postcss": "^8.5.6",
    "postcss-selector-parser": "^7.1.0",
    "prettier": "^3.3.3",
    "puppeteer": "^24.23.0"
  }
}
