{
  "name": "aks-website",
  "version": "1.0.0",
  "description": "Portfolio Website mit Cloudflare AI Search (Vanilla JS)",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "node scripts/dev-workflow.mjs",
    "qa": "eslint . && prettier --check . && stylelint \"content/**/*.css\" \"pages/**/*.css\" && node scripts/css-token-structure-check.mjs && node scripts/css-audit.mjs && node scripts/sync-ai-index-apps.mjs --check && node scripts/structure-check.mjs",
    "qa:fix": "eslint . --fix && stylelint \"content/**/*.css\" \"pages/**/*.css\" --fix && prettier --write .",
    "qa:all": "npm run qa:fix && npm run qa",
    "clean": "rm -rf .wrangler node_modules/.cache",
    "prepare": "husky",
    "styles:generate": "node scripts/generate-tokens-css.mjs && node scripts/generate-utilities.mjs",
    "docs:check": "node scripts/docs-check.mjs",
    "ai-index:sync": "node scripts/sync-ai-index-apps.mjs",
    "cf:redirect:audit": "node scripts/cloudflare-redirect-audit.mjs --days 8 --limit 500",
    "cf:redirect:prune": "node scripts/cloudflare-redirect-audit.mjs --days 8 --limit 500 --apply-prune"
  },
  "dependencies": {
    "three": "^0.183.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "dompurify": "^3.3.1",
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "purgecss": "^7.0.2",
    "react": "^19.2.4",
    "stylelint": "^16.25.0",
    "wrangler": "^4.67.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,html,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
