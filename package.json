{
  "name": "iweb",
  "version": "0.2.1",
  "private": true,
  "description": "Static site for Abdulkerim with test tooling",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "serve": "http-server ./ -p 8081",
    "dev": "npm run serve",
    "test": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "http-server": "^14.1.1",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^39.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,scss,html,json,md}": [
      "prettier --write"
    ]
  }
}
