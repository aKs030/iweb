{
  "name": "iweb",
  "version": "0.2.2",
  "private": true,
  "description": "Static site for Abdulkerim with test tooling",
  "license": "MIT",
  "scripts": {
    "serve": "http-server ./ -p 8081",
    "dev": "npm run serve",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "lint:js": "eslint . --ext .js,.ts",
    "lint": "npm run lint:js"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "eslint": "^9.39.2",
    "http-server": "^14.1.1",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.7.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{css,html,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
