{
  "name": "iweb",
  "version": "1.0.0",
  "description": "Portfolio website of Abdulkerim Sesli - Web Developer & Photographer in Berlin",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write \"**/*.{js,css,json,md,html}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,css,json,md,html}\" --ignore-path .prettierignore",
    "lint": "eslint \"**/*.js\" --fix",
    "lint:check": "eslint \"**/*.js\"",
    "check": "npm run lint:check && npm run format:check",
    "fix": "npm run lint && npm run format",
    "analyze": "vite-bundle-visualizer",
    "prepare": "husky",
    "clean": "rm -rf dist .vite node_modules/.vite",
    "clean:all": "rm -rf dist .vite node_modules",
    "reinstall": "npm run clean:all && npm install",
    "deploy:workers": "./workers/deploy.sh",
    "css:check": "echo 'CSS Stats:' && wc -l content/styles/*.css content/styles/components/*.css 2>/dev/null || wc -l content/styles/*.css",
    "size:check": "npm run build && ls -lh dist/assets/*.css dist/assets/*.js | grep -E 'main|vendor'",
    "docs": "echo 'Documentation:' && ls -1 docs/*.md && echo '' && echo 'Root docs:' && ls -1 *.md | grep -E 'CSS|PROJEKT|README'",
    "test:build": "npm run build && npm run preview"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/three": "^0.182.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^14.0.0",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "terser": "^5.37.0",
    "vite": "^6.0.5",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-plugin-compression": "^0.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aKs030/iweb.git"
  },
  "keywords": [
    "portfolio",
    "webdev",
    "photography",
    "berlin"
  ],
  "author": "Abdulkerim Sesli",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "bugs": {
    "url": "https://github.com/aKs030/iweb/issues"
  },
  "homepage": "https://github.com/aKs030/iweb#readme",
  "dependencies": {
    "dompurify": "^3.3.1",
    "prop-types": "^15.8.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "three": "^0.182.0"
  }
}
