<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <square70x70logo src="/content/assets/img/icons/icon-96.png"/>
      <square150x150logo src="/content/assets/img/icons/icon-144.png"/>
      <square310x310logo src="/content/assets/img/icons/icon-192.png"/>
      <wide310x150logo src="/content/assets/img/icons/icon-192.png"/>
      <TileColor>#07a1ff</TileColor>
    </tile>

    <!-- Notification settings -->
    <notification>
      <polling-uri src="https://www.abdulkerimsesli.de/notifications/tile1.xml"/>
      <polling-uri2 src="https://www.abdulkerimsesli.de/notifications/tile2.xml"/>
      <polling-uri3 src="https://www.abdulkerimsesli.de/notifications/tile3.xml"/>
      <polling-uri4 src="https://www.abdulkerimsesli.de/notifications/tile4.xml"/>
      <polling-uri5 src="https://www.abdulkerimsesli.de/notifications/tile5.xml"/>
      <frequency>30</frequency>
      <cycle>1</cycle>
    </notification>

    <!-- Badge (optional) -->
    <badge>
      <polling-uri src="https://www.abdulkerimsesli.de/notifications/badge.xml"/>
      <frequency>30</frequency>
    </badge>

  </msapplication>
</browserconfig>