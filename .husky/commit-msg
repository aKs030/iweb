#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format
# Format: type(scope): subject
# Example: feat(menu): add dark mode toggle

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Regex for conventional commits
commit_regex='^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\(.+\))?: .{1,100}'

if ! echo "$commit_msg" | grep -qE "$commit_regex"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit message must follow Conventional Commits:"
  echo "  type(scope): subject"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert"
  echo ""
  echo "Examples:"
  echo "  feat(menu): add dark mode toggle"
  echo "  fix(footer): resolve cookie banner positioning"
  echo "  docs: update README with new features"
  echo ""
  exit 1
fi
